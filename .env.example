# Copy this file to .env and fill in your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mydatabase
DB_USERNAME=myuser
DB_PASSWORD=your_actual_password_here

# OAuth2 Configuration (Google)
# Set these to actual values to enable OAuth2 login, or leave as 'dummy' to disable
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# JWT Configuration (for future use)
JWT_SECRET=your_jwt_secret_key_here_at_least_32_characters_long

# Email Configuration (for notifications and password reset)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_specific_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# External API Keys (for future integrations)
API_KEY=your_api_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here

# Application Configuration
APP_BASE_URL=http://localhost:8080
APP_NAME=Foods Management System
ADMIN_EMAIL=admin@example.com

# Security Configuration
CSRF_ENABLED=true
SESSION_TIMEOUT=3600

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_DIR=uploads/

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/application.log
