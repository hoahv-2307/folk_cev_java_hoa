# Copy this file to .env and fill in your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mydatabase
DB_USERNAME=
DB_PASSWORD=

# OAuth2 Configuration (Google)
# Set these to actual values to enable OAuth2 login, or leave as 'dummy' to disable
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# JWT Configuration (for future use)
JWT_SECRET=

# Email Configuration (for notifications and password reset)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# External API Keys (for future integrations)
API_KEY=

# Stripe Payment Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Application Configuration
APP_BASE_URL=http://localhost:8080
APP_NAME=Foods Management System
ADMIN_EMAIL=admin@example.com

# Security Configuration
CSRF_ENABLED=true
SESSION_TIMEOUT=3600

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_DIR=uploads/

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/application.log
